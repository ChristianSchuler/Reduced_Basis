	# Direct solver with penalty method
	#-pcmat_type    mono
	#-pcmat_pgamma  1e5	# penalty parameter
	#-jp_type       user
	#-jp_pc_type    lu


	
        -objects_dump
	#-dump_decomposition_matrices
	-dump_sol
	-dump_precondition_matrixes
	-dump_precondition_matrixes_prefix Ass
	-dump_rhs
	-dump_rho


<PetscOptionsEnd>

